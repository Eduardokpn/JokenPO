<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JokenPO.View.PlayerView"
             Title="PlayerView">
    <VerticalStackLayout>
        <Label 
            Text="Bem Viado" />

        <Entry
            x:Name="NomeEntry"
            Placeholder="Digite seu nome"
            Text="{Binding Nome}"
         />

        <Picker x:Name="EscolhaPicker" SelectedIndex="{Binding Escolha}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>PAPEL</x:String>
                    <x:String>PEDRA</x:String>
                    <x:String>TESOURA</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Label
            x:Name="Resultado"
            Text="{Binding Valor}" />

        <Label
            x:Name="Pontuação"
            Text="{Binding Pontuacao}"
            />

        <Button
            Text="JOGAR"
            Command="{Binding jogarComand}"
            
            />

    </VerticalStackLayout>
</ContentPage>